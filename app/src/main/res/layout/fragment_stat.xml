<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".StatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_virus_level3"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="@string/tv_virus_name"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="#555555"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view">

            <Button
                android:id="@+id/btn_korea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_stroke_checked"
                android:text="@string/btn_korea_txt"
                app:layout_constraintEnd_toStartOf="@id/btn_world"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/btn_world"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_stroke"
                android:text="@string/btn_world_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/btn_korea"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout2"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_confirmed_label"
                android:textColor="#FF0000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraintLayout3" />

            <TextView
                android:id="@+id/tv_decideCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/_0"
                android:textColor="#FF0000"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalTextView" />

            <TextView
                android:id="@+id/tv_decideIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tv_increase_expression_label"
                android:textColor="#FF0000"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_decideCnt" />

            <View
                android:id="@+id/view2"
                android:layout_width="2dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:background="#555555"
                app:layout_constraintBottom_toTopOf="@+id/tv_death_label"
                app:layout_constraintEnd_toStartOf="@+id/tv_clearCnt"
                app:layout_constraintStart_toEndOf="@+id/tv_examCnt"
                app:layout_constraintTop_toBottomOf="@+id/tv_decideIncrease" />

            <TextView
                android:id="@+id/tv_exam_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tv_testing_label"
                android:textColor="#FFC107"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_decideIncrease" />

            <TextView
                android:id="@+id/tv_examCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/_0"
                android:textColor="#FFC107"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@id/tv_exam_label"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/tv_exam_label"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label" />

            <TextView
                android:id="@+id/tv_examIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tv_increase_expression_label"
                android:textColor="#FFC107"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_examCnt"
                app:layout_constraintStart_toStartOf="@id/tv_examCnt"
                app:layout_constraintTop_toBottomOf="@id/tv_examCnt" />

            <TextView
                android:id="@+id/tv_clear_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tv_recovered_label"
                android:textColor="#3F51B5"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_decideIncrease" />

            <TextView
                android:id="@+id/tv_clearCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/_0"
                android:textColor="#3F51B5"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@id/tv_clear_label"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/tv_clear_label"
                app:layout_constraintTop_toBottomOf="@id/tv_clear_label" />

            <TextView
                android:id="@+id/tv_clearIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tv_increase_expression_label"
                android:textColor="#3F51B5"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_clearCnt"
                app:layout_constraintStart_toStartOf="@id/tv_clearCnt"
                app:layout_constraintTop_toBottomOf="@id/tv_clearCnt" />

            <TextView
                android:id="@+id/tv_death_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@string/tv_deaths_label"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_decideIncrease" />

            <TextView
                android:id="@+id/tv_deathCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/_0"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@id/tv_death_label"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/tv_death_label"
                app:layout_constraintTop_toBottomOf="@id/tv_death_label" />

            <TextView
                android:id="@+id/tv_deathIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/tv_increase_expression_label"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_deathCnt"
                app:layout_constraintStart_toStartOf="@id/tv_deathCnt"
                app:layout_constraintTop_toBottomOf="@id/tv_deathCnt" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/tv_rate_of_increase_label"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>